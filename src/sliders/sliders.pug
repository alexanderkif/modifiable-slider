            each s in sliders
                +sliderm3(s.min, s.max, s.value1, s.value2, s.step, s.intervals, s.hint, s.scale, s.interval, s.vertical, s.length, s.lineHeight, s.pointSize, s.colorLine, s.colorRange, s.colorPoint, s.colorScale, s.colorText)